---
import { resolvePath } from "../../utils/paths";
---

<section class="max-w-7xl mx-auto px-4 md:px-6 py-20">
    <div
        class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 h-auto md:h-[600px]"
    >
        {/* Large Item: Hombre (Left) */}
        <a
            href={resolvePath("/hombre")}
            class="group relative overflow-hidden h-[400px] md:h-full md:row-span-2 rounded-sm block animate-on-scroll"
        >
            <div
                class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                style={`background-image: url('${resolvePath("/images/menu-hombre.webp")}')`}
            >
            </div>
            <div
                class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-80 group-hover:opacity-60 transition-opacity"
            >
            </div>

            <div class="absolute bottom-8 left-8 p-4">
                <span
                    class="text-[#d4af37] text-xs font-bold uppercase tracking-[0.2em] mb-2 block"
                    >El Icono de Miami</span
                >
                <h3
                    class="text-white font-serif text-3xl md:text-5xl leading-tight mb-4"
                >
                    Cuban Links
                </h3>
                <span
                    class="inline-flex items-center text-white text-sm font-bold uppercase tracking-widest group-hover:text-[#d4af37] transition-colors gap-2"
                >
                    Ver Colección <span
                        class="material-symbols-outlined text-sm"
                        >arrow_forward</span
                    >
                </span>
            </div>
        </a>

        {/* Right Column Grid */}
        <div class="flex flex-col gap-4 md:gap-6 h-full">
            {/* Top Right: Religiosa */}
            <a
                href={resolvePath("/coleccion/religiosa")}
                class="group relative overflow-hidden h-[300px] md:h-1/2 rounded-sm block animate-on-scroll delay-100"
            >
                <div
                    class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                    style={`background-image: url('${resolvePath("/images/menu-religiosos.webp")}')`}
                >
                </div>
                <div
                    class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-colors"
                >
                </div>

                <div class="absolute bottom-6 left-6">
                    <h3 class="text-white font-serif text-2xl md:text-3xl mb-1">
                        Fe y Protección
                    </h3>
                    <p class="text-gray-300 text-xs font-light mb-3">
                        Medallas, Cruces y Rosarios
                    </p>
                    <span
                        class="text-white/80 text-xs uppercase tracking-widest border-b border-transparent group-hover:border-[#d4af37] group-hover:text-[#d4af37] transition-all"
                        >Explorar</span
                    >
                </div>
            </a>

            {/* Bottom Right: Mujer/Regalos */}
            <a
                href={resolvePath("/mujer")}
                class="group relative overflow-hidden h-[300px] md:h-1/2 rounded-sm block animate-on-scroll delay-200"
            >
                <div
                    class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
                    style={`background-image: url('${resolvePath("/images/menu-regalos.webp")}')`}
                >
                </div>
                <div
                    class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-colors"
                >
                </div>

                <div class="absolute bottom-6 left-6">
                    <h3 class="text-white font-serif text-2xl md:text-3xl mb-1">
                        Detalles para Ella
                    </h3>
                    <p class="text-gray-300 text-xs font-light mb-3">
                        Regalos que enamoran
                    </p>
                    <span
                        class="text-white/80 text-xs uppercase tracking-widest border-b border-transparent group-hover:border-[#d4af37] group-hover:text-[#d4af37] transition-all"
                        >Explorar</span
                    >
                </div>
            </a>
        </div>
    </div>
</section>
